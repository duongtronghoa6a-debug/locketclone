<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LocketClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black_900</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- NoActionBar base -->
    <style name="Theme.LocketClone.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black_900</item>
        <item name="android:windowBackground">@color/black_900</item>
    </style>

    <!-- Bottom sheet style with rounded corners -->
    <style name="Theme.LocketClone.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.LocketClone.BottomSheet</item>
    </style>

    <style name="Widget.LocketClone.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.LocketClone.BottomSheet</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ShapeAppearance.LocketClone.BottomSheet" parent="">
        <!-- corner size -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
</resources>